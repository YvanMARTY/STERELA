<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_bitDeDonnees"
            android:textAlignment="center"
            style="@android:style/Widget.Spinner"
            android:background="@color/White"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/spinner_vitesse"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right" />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_vitesse"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            style="@android:style/Widget.Spinner"
            android:background="@color/White"
            android:spinnerMode="dropdown"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right" />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_bitParite"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            style="@android:style/Widget.Spinner"
            android:background="@color/White"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/spinner_bitDeDonnees"
            android:layout_alignStart="@+id/spinner_bitDeDonnees"
            android:layout_gravity="right" />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_bitArret"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            style="@android:style/Widget.Spinner"
            android:background="@color/White"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/spinner_bitParite"
            android:layout_alignParentEnd="false"
            android:layout_gravity="right" />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_bitControleDeFlux"
            android:textAlignment="center"
            style="@android:style/Widget.Spinner"
            android:background="@color/White"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/spinner_bitArret"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Vitesse :"
            android:id="@+id/Vitesse"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/spinner_vitesse"
            android:layout_marginEnd="30dp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bits de données :"
            android:id="@+id/BitDeDonnees"
            android:layout_below="@+id/spinner_vitesse"
            android:layout_alignEnd="@+id/Vitesse"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bit de parité :"
            android:id="@+id/BitDeParite"
            android:layout_alignTop="@+id/spinner_bitParite"
            android:layout_alignEnd="@+id/BitDeDonnees"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bit d&apos;arrêt :"
            android:id="@+id/BitDArret"
            android:layout_below="@+id/spinner_bitParite"
            android:layout_alignEnd="@+id/BitDeParite"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Controle de flux :"
            android:id="@+id/ControleDeFlux"
            android:layout_below="@+id/spinner_bitArret"
            android:layout_alignEnd="@+id/BitDArret"
            android:textStyle="bold"
            android:textColor="#000000" />
    </RelativeLayout>

</LinearLayout>